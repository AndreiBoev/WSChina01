<Page x:Class="MarathonChinaApp.Pages.CoordinatorPage.PageSponsorshipManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonChinaApp.Pages.CoordinatorPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Sponsorship Management">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Style="{StaticResource FontHeader}" Text="Sponsorship Management"></TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource FontBase}" FontSize="20" TextAlignment="Center" Name="TBGreeting" Text="{Binding Greeting}"></TextBlock>
            <Button Height="100" Width="300" Style="{StaticResource BtnBase}" Content="Sponsorship Statistics" Name="BtnStatistics" Click="BtnStatistics_Click"></Button>
            <Button Height="100" Width="300" Style="{StaticResource BtnBase}" Content="Sponsorship View"></Button>
            <Button Height="100" Width="300" Style="{StaticResource BtnBase}" Content="Sponsorship Chart"></Button>
        </StackPanel>
    </StackPanel>
</Page>
