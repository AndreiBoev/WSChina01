<Page x:Class="MarathonChinaApp.Pages.JudgerPage.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonChinaApp.Pages.JudgerPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Judger Menu">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Style="{StaticResource FontHeader}" Text="Judger Menu"></TextBlock>
        <Border Style="{StaticResource BorBase}" Width="800">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Style="{StaticResource FontBase}" FontSize="20" TextAlignment="Center" Name="TBGreeting" Text="{Binding Greeting}"></TextBlock>
                <Button Height="100" Width="300" Style="{StaticResource BtnBase}" Content="Draw Lots" Name="BtnDrawLots"></Button>
                <Button Height="100" Width="300" Style="{StaticResource BtnBase}" Content="Input Score" Name="BtnInputScore"></Button>
                <Button Height="100" Width="300" Style="{StaticResource BtnBase}" Content="View Result" Name="BtnResult"></Button>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
