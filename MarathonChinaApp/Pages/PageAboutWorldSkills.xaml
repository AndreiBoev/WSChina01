<Page x:Class="MarathonChinaApp.Pages.PageAboutWorldSkills"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonChinaApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="About WorldSkills" Tag="Unauth">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="About WorldSkills" Style="{StaticResource FontHeader}" HorizontalAlignment="Center" FontSize="30"></TextBlock>
            <Button Content="History of WorldSkills" Height="80" Width="300" Style="{StaticResource BtnBase}" Name="HisOfWS" Click="HisOfWS_Click"></Button>
            <Button Content="Competition Skills" Height="80" Width="300" Style="{StaticResource BtnBase}" Name="BtnCompSkills" Click="BtnCompSkills_Click"></Button>
            <Button Content="Previous Competition" Height="80" Width="300" Style="{StaticResource BtnBase}" Name="BtnPrevComp" Click="BtnPrevComp_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
